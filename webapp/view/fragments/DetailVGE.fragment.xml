<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"  
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:n="sap.n"
    xmlns:f="sap.f"
    xmlns:microchart="sap.suite.ui.microchart"
    xmlns:si="sap.suite.ui.commons.statusindicator"
    xmlns:co="sap.suite.ui.commons"
    xmlns:svm="sap.ui.comp.smartvariants">
     <Shell>
     <VBox alignItems="Center">
             <HBox alignItems="Center" justifyContent="Center" class="sapUiSmallMargin">
                        <!-- Paso 1 -->
                        <VBox alignItems="Center">
                                <core:Icon id="iState1" src="sap-icon://accounting-document-verification" size="3rem" color="gray"/>
                                <Label text="Pendiente de Aprobación" design="Bold"/>
                        </VBox>
                        <!-- Flecha -->
                        <core:Icon src="sap-icon://less" size="2rem" color="gray"/>
                        <core:Icon src="sap-icon://process" size="2rem" color="gray"/>
                        <core:Icon src="sap-icon://less" size="2rem" color="gray"/>
                        <!-- Paso 2 -->
                        <VBox alignItems="Center">
                                <core:Icon id="iState2" src="sap-icon://approvals" size="3rem" color="gray"/>
                                <Label text="Aprobado" design="Bold"/>
                        </VBox>
                        <!-- Flecha -->
                        <core:Icon src="sap-icon://less" size="2rem" color="gray"/>
                        <core:Icon src="sap-icon://process" size="2rem" color="gray"/>
                        <core:Icon src="sap-icon://less" size="2rem" color="gray"/>
                        <!-- Paso 3 -->
                        <VBox alignItems="Center">
                                <core:Icon id="iState3" src="sap-icon://shipping-status" size="3rem" color="gray"/>
                                <Label text="En Preparación" design="Bold"/>
                        </VBox>
                        <!-- Flecha -->
                        <core:Icon src="sap-icon://less" size="2rem" color="gray"/>
                        <core:Icon src="sap-icon://process" size="2rem" color="gray"/>
                        <core:Icon src="sap-icon://less" size="2rem" color="gray"/>
                        <!-- Paso 4 -->
                        <VBox alignItems="Center">
                                <core:Icon id="iState4" src="sap-icon://payment-approval" size="3rem" color="gray"/>
                                <Label text="Facturación" design="Bold"/>
                        </VBox>
                        <!-- Flecha -->
                        <core:Icon src="sap-icon://less" size="2rem" color="gray"/>
                        <core:Icon src="sap-icon://process" size="2rem" color="gray"/>
                        <core:Icon src="sap-icon://less" size="2rem" color="gray"/>

                        <!-- Paso 5 -->
                                <VBox alignItems="Center">
                                        <core:Icon id="iState5" src="sap-icon://complete" size="3rem" color="gray"/>
                                        <Label text="Finalizado" design="Bold"/>
                                </VBox>
                </HBox>

                 <ScrollContainer width="100%" height="50%">
                        <Table id="vdTable1" items="{oModelProyect>/oDetalle}"  mode="None" growingThreshold="20" headerText="Detalle de Pedido" popinLayout="GridSmall"  class="sapUiSmallMargin" >
                                <columns>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetNumPosition}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetMaterials}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="120px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetDescription}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetUM}" width="auto" />
                                        </header>
                                        <footer>
                                                <Text text="Totales" width="auto" />
                                        </footer>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetQuantityOrdered}" width="auto" />
                                        </header>
                                        <footer>
                                                <Text text="{oModelProyect>/oValoresVGECantPedi}" width="auto" />
                                        </footer>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetQuantityShipped}" width="auto" />
                                        </header>
                                        <footer>
                                                <Text text="{oModelProyect>/oValoresVGECantDesp}" width="auto" />
                                        </footer>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetQuantityAmount}" width="auto" />
                                        </header>
                                        <footer>
                                                <Text text="{oModelProyect>/oValoresVGECantPend}" width="auto" />
                                        </footer>
                                </Column>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetStatusPosition}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="50px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetNroPallets}" width="auto" />
                                        </header>
                                        <footer>
                                                <Text text="{oModelProyect>/oValoresVGECantPaletas}" width="auto" />
                                        </footer>
                                </Column>
                                <Column width="50px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetNroBox}" width="auto" />
                                        </header>
                                        <footer>
                                        <Text text="{oModelProyect>/oValoresVGECantCaja}" width="auto" />
                                        </footer>
                                </Column>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDetBulkType}" width="auto" />
                                        </header>
                                        
                                        
                                </Column>
                                
                                </columns>
                                <items>
                                        <ColumnListItem type="Inactive">
                                                <cells>
                                                <Text text="{path:'oModelProyect>txt2'}"/>
                                                <Text text="{path:'oModelProyect>txt3'}"/>
                                                <Text text="{path:'oModelProyect>txt4'}"/>
                                                <Text text="{path:'oModelProyect>txt5'}"/>
                                                <Text text="{path:'oModelProyect>txt6'}"/>
                                                <Text text="{path:'oModelProyect>txt7'}"/>
                                                <Text text="{path:'oModelProyect>txt8'}"/>
                                                <Text text="{path:'oModelProyect>txt9'}"/>
                                                <Text text="{path:'oModelProyect>txt10'}"/>
                                                <Text text="{path:'oModelProyect>txt11'}"/>
                                                <Text text="{path:'oModelProyect>txt12'}"/>
                                                </cells>
                                        </ColumnListItem>
                                </items>
                        </Table>
                         </ScrollContainer>
                         <ScrollContainer width="100%" height="50%">
                        <Table id="vdTable2" items="{oModelProyect>/oListDesp}"  mode="None" growingThreshold="20" headerText="Detalle de Despacho" class="sapUiSmallMargin" >
                                <columns>
                                <Column width="50px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesLink}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="110px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesDispatch}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesDateGuide}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="200px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesDispatchAddress}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="180px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesReferralGuide}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesGrossWeight}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesNetWeight}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesTotPallets}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleDesNroBulk}" width="auto" />
                                        </header>
                                </Column>
                                </columns>
                                <items>
                                        <ColumnListItem type="Inactive">
                                                <cells>
                                                 <Button icon="sap-icon://pdf-attachment" />
                                                <Text text="{path:'oModelProyect>txt2'}"/>
                                                <Text text="{path:'oModelProyect>txt3'}"/>
                                                <Text text="{path:'oModelProyect>txt4'}"/>
                                                <Text text="{path:'oModelProyect>txt5'}"/>
                                                <Text text="{path:'oModelProyect>txt6'}"/>
                                                <Text text="{path:'oModelProyect>txt7'}"/>
                                                <Text text="{path:'oModelProyect>txt8'}"/>
                                                <Text text="{path:'oModelProyect>txt9'}"/>
                                                </cells>
                                        </ColumnListItem>
                                </items>
                        </Table>
                         </ScrollContainer>
                          <ScrollContainer width="100%" height="50%">
                        <Table id="vdTable3" items="{oModelProyect>/oListFac}"  mode="None" growingThreshold="20" headerText="Lista de Facturas" class="sapUiSmallMargin">
                                <columns>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacLink}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="150px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacInvoice}" width="auto" />
                                        </header>
                                </Column>
                               
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacCurrency}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacAmount}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacDiscount}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacTax}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacTotal}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacDateIssue}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="250px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacPaymentCondition}" width="auto" />
                                        </header>
                                </Column>
                                 <Column width="150px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleFacRelatedInvoice}" width="auto" />
                                        </header>
                                </Column>
                                </columns>
                                <items>
                                        <ColumnListItem type="Inactive">
                                                <cells>
                                                <Button icon="sap-icon://pdf-attachment" />
                                                <Text text="{path:'oModelProyect>txt2'}"/>
                                                <Text text="{path:'oModelProyect>txt3'}"/>
                                                <Text text="{path:'oModelProyect>txt4'}"/>
                                                <Text text="{path:'oModelProyect>txt5'}"/>
                                                <Text text="{path:'oModelProyect>txt6'}"/>
                                                <Text text="{path:'oModelProyect>txt7'}"/>
                                                <Text text="{path:'oModelProyect>txt8'}"/>
                                                <Text text="{path:'oModelProyect>txt9'}"/>
                                                <Text text="{path:'oModelProyect>txt10'}"/>
                                                </cells>
                                        </ColumnListItem>
                                </items>
                        </Table>
                        </ScrollContainer>
           </VBox>
      </Shell >
</core:FragmentDefinition>