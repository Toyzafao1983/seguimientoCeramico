<core:FragmentDefinition xmlns:threejs="sap.ui.vk.threejs" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"  
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:n="sap.n"
    xmlns:f="sap.f"
    xmlns:microchart="sap.suite.ui.microchart"
    xmlns:si="sap.suite.ui.commons.statusindicator"
    xmlns:co="sap.suite.ui.commons"
    xmlns:svm="sap.ui.comp.smartvariants">
     <Shell>
     <VBox alignItems="Center">
           
                 <ScrollContainer width="100%" height="50%">
                        <Table id="vdTableCS1" items="{oModelProyect>/oListSegui}"  mode="None" growingThreshold="20" headerText="Detalle de Pedido" popinLayout="GridSmall"  class="sapUiSmallMargin" >
                                <columns>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleSeNumPosition}" width="auto" />
                                        </header>
                                        
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleSeMaterials}" width="auto" />
                                        </header>
                                    
                                </Column>
                                <Column width="120px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleSeDescription}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleSeUM}" width="auto" />
                                        </header>
                                         <footer>
                                                <Text text="{i18n>titleSeTotal}" width="auto" />
                                        </footer>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleSeQuantityOrdered}" width="auto" />
                                        </header>
                                         <footer>
                                                <Text text="{oModelProyect>/oValorestot}" width="auto" />
                                        </footer>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titleSeStatusPosition}" width="auto" />
                                        </header>
                                </Column>
                                </columns>
                                <items>
                                        <ColumnListItem type="Inactive">
                                                <cells>
                                                <Text text="{path:'oModelProyect>txt2'}"/>
                                                <Text text="{path:'oModelProyect>txt3'}"/>
                                                <Text text="{path:'oModelProyect>txt4'}"/>
                                                <Text text="{path:'oModelProyect>txt5'}"/>
                                                <Text text="{path:'oModelProyect>txt6'}"/>
                                                <Text text="{path:'oModelProyect>txt7'}"/>
                                                </cells>
                                        </ColumnListItem>
                                </items>
                                
                        </Table>
                         </ScrollContainer>
                         <ScrollContainer width="100%" height="50%">
                        <Table id="vdTableCS2" items="{oModelProyect>/oListCliente}"  mode="None" growingThreshold="20" headerText="Detalle de Despacho" class="sapUiSmallMargin" >
                                <columns>
                                <Column width="50px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titlePANOrder}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="110px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titlePACustomer}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titlePACompName}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="200px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titlePAOrderType}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="180px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titlePAAmount}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="80px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titlePAOrderDate}" width="auto" />
                                        </header>
                                </Column>
                                <Column width="100px" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                        <header>
                                        <Text text="{i18n>titlePAState}" width="auto" />
                                        </header>
                                </Column>
                                </columns>
                                <items>
                                        <ColumnListItem type="Inactive">
                                                <cells>
                                                <Text text="{path:'oModelProyect>txt1'}"/>
                                                <Text text="{path:'oModelProyect>txt2'}"/>
                                                <Text text="{path:'oModelProyect>txt3'}"/>
                                                <Text text="{path:'oModelProyect>txt8'}"/>
                                                <Text text="{path:'oModelProyect>txt9'}"/>
                                                <Text text="{path:'oModelProyect>txt11'}"/>
                                                </cells>
                                        </ColumnListItem>
                                </items>
                                
                        </Table>
                         </ScrollContainer>

           </VBox>
      </Shell >
</core:FragmentDefinition>